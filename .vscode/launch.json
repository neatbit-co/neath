{
	"version": "0.2.0",
	"configurations": [				
		{
			"type": "chrome",
			"request": "launch",
			"name": "Launch Chrome",
			"url": "http://localhost:3000",			
			"webRoot": "${workspaceRoot}",
			"sourceMapPathOverrides": {
				"/*": "${webRoot}/*",				
			}
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach Server",
			"port": 9031,
            "restart": true,
			"sourceMapPathOverrides": {				
				"/*": "${workspaceRoot}/*"
			}
		}		
	],
	"compounds": [
		{
			"name": "Start Both",
			"configurations": [
				"Attach Server",
				"Launch Chrome"
			]
		}
	]
}